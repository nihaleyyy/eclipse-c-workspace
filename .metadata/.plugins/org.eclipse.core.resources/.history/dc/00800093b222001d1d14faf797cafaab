#include <stdio.h>
#include <stdlib.h>

int main(void) {
	setbuf(stdout,NULL);
	int rows,i,j;
	printf("no of rows :");
	scanf("%d",&rows);
	for(i=1;i<=rows;i++){
		for(j=0;j<=i;j++){
			printf("%d",j);
		}
		printf("\n");
	}
	return EXIT_SUCCESS;
}
