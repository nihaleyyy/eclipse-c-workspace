#include <stdio.h>
#include <stdlib.h>

int main(void) {
	setbuf(stdout,NULL);
	int num1;
	float num2,sum;
	printf("Enter 2 numbers");
	scanf("%d",&num1);
	scanf("%f",&num2,sum);
	sum=num1+num2;
	return EXIT_SUCCESS;
}
