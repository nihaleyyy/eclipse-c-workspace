#include <stdio.h>
#include <stdlib.h>

int main(void) {
	setbuf(stdout,NULL);
	float p,r,n,si;
	printf("input principle,rate of interest and time to find simple interest");
	scanf("%f%f%f",&p,&r,&n);
	si=(p*r*n)/100;
	printf("The simple interest is = %f \n",si);
	return EXIT_SUCCESS;
}
